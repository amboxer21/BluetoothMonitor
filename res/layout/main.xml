<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/bluetooth_monitor"
  android:background="#E8E8E8"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

  <Spinner
    android:id="@+id/device_list_menu"
    android:layout_height="40dp"
    android:spinnerMode="dropdown"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="fill_parent"
    android:background="@drawable/device_list"/>

  <EditText
    android:textColor="#3F51B5"
    android:layout_width="fill_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:hint="@string/timer_duration"
    android:textColorHint="#3F51B5"
    android:id="@+id/edit_timer_duration"
    android:layout_height="40dp"
    android:inputType="number"
    android:background="@drawable/edit_text"
    android:layout_below="@+id/device_list_menu"/>

  <Button
    android:text="@string/update_button"
    android:id="@+id/button"
    android:textColor="#FFFFFF"
    android:layout_width="270dp"
    android:layout_height="45dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="30dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/button"/>

</RelativeLayout>
